<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginTop="5dp"
    android:backgroundTint="@color/colorBlanco"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">


    <ImageView
        android:id="@+id/img"
        android:background="#000000"
        android:layout_width="10dp"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:id="@+id/nombre_maquina_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_image"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Nombre de las Máquinas"/>
        <TextView
            android:id="@+id/tipo_maquina_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_image"
            android:layout_below="@+id/nombre_maquina_text"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Tipo de Máquinas"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>