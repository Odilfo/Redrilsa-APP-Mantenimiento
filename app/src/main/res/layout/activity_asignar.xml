<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bt_lenguajes"
    tools:context=".activities.AsignarActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:orientation="vertical"
                android:padding="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:backgroundTint="@color/colorBlack"
                    android:layout_marginBottom="40dp"
                    android:src="@drawable/ic_asign" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="ASIGNACIÓN DE MÁQUINA"
                    android:layout_marginBottom="30dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="35sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp"
                    android:text="Nombres de las Máquinas" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGris">
                    <EditText
                        android:id="@+id/etTipoMaquinas"
                        android:padding="12dp"
                        android:inputType="text"
                        android:gravity="center"
                        android:hint="Tipo de Máquinas"
                        android:textSize="25sp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="25sp"
                    android:text="Fecha de Asignación" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/colorGris">

                    <EditText
                        android:id="@+id/etFechaAsignacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ingrese Fecha de Asignación"
                        android:gravity="center"
                        android:inputType="date"
                        android:padding="15dp"
                        android:textSize="25sp" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btAsignar"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/gradient_bt"
                    android:text="ASIGNAR"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="40dp"
                    android:textColor="@color/colorBlanco"
                    android:backgroundTint="#FB8C00"
                    android:layout_width="match_parent"
                    android:layout_height="60dp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


</ScrollView>
